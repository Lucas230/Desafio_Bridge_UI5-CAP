<mvc:View
    xmlns:core="sap.ui.core" 
    controllerName="desafiobridge.desafiobridge.controller.ParticipanteCadastro"
    xmlns:form="sap.ui.layout.form" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
>
	<Page showHeader="true" title="Cadastro de Participante" titleAlignment="Center">
        <content>
            <form:Form >
                <form:title>
                    <core:Title text="Preencha os campos necessários" level="H6" ></core:Title>
                </form:title>
                <form:layout>
                    <form:ColumnLayout columnsL="1" columnsM="1" columnsXL="2"></form:ColumnLayout>
                </form:layout>
                <form:formContainers> 
                    <form:FormContainer >
                        <form:formElements>
                            <form:FormElement >
                                <form:fields>
                                    <Input value="{Participante>/nome}" placeholder="Nome"></Input>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <Input value="{Participante>/email}" placeholder="E-mail"></Input>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <Input value="{Participante>/cpf}" placeholder="CPF"></Input>
                                </form:fields>
                            </form:FormElement>
                            
                            <form:FormElement >
                                <form:fields>
                                    <ComboBox selectedKey="{Participante>/deficiencia}" placeholder="Possui deficiência?">
                                        <items>
                                            <core:Item key="S" text="Sim" />
                                            <core:Item key="N" text="Não" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <ComboBox selectedKey="{Participante>/sexo}" placeholder="Sexo">
                                        <items>
                                            <core:Item key="Masculino" text="Masculino" />
                                            <core:Item key="Feminino" text="Feminino" />
                                            <core:Item key="Outros" text="Outros" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <Input type="Password" value="{Participante>/senha}" placeholder="Senha"></Input>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <Input type="Password" value="{Participante>/confSenha}" placeholder="Confirmar senha"></Input>
                                </form:fields>
                            </form:FormElement >
                            
                        </form:formElements>
                    </form:FormContainer>
                    

                    <form:FormContainer >
                        <form:formElements>

                            <form:FormElement >
                                <form:fields>
                                    <Input value="{Participante>/telefone}" placeholder="Telefone"></Input>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <ComboBox selectedKey="{Participante>/escolaridade}" placeholder="Escolaridade">
                                        <items>
                                            <core:Item key="Nenhum" text="Nenhum" />
                                            <core:Item key="Básico" text="Básico" />
                                            <core:Item key="Intermediário" text="Intermediário" />
                                            <core:Item key="Avançado" text="Avançado" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <ComboBox selectedKey="{Participante>/instituicao_ID}" placeholder="Instituicao" items="{InstituicaoList>/}">
                                        <items>
                                            <core:Item key="{InstituicaoList>ID}" text="{InstituicaoList>nome}" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>
                            
                            <form:FormElement >
                                <form:fields>
                                    <ComboBox selectedKey="{Participante>/curso}" placeholder="Curso">
                                        <items>
                                            <core:Item key="Nenhum" text="Nenhum" />
                                            <core:Item key="Básico" text="Básico" />
                                            <core:Item key="Intermediário" text="Intermediário" />
                                            <core:Item key="Avançado" text="Avançado" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <ComboBox selectedKey="{Participante>/conhecimento}" placeholder="Nível conhecimento em TI">
                                        <items>
                                            <core:Item key="nenhum" text="Nenhum" />
                                            <core:Item key="basico" text="Básico" />
                                            <core:Item key="intermediário" text="Intermediário" />
                                            <core:Item key="avançado" text="Avançado" />
                                        </items>
                                    </ComboBox>
                                </form:fields>
                            </form:FormElement>

                        </form:formElements>
                    </form:FormContainer>

                
                </form:formContainers> 
            </form:Form>
            
        </content>
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Cancelar" type="Reject" press="onCancelar"/>
                <Button text="Confirmar" type="Emphasized" press="onConfirmar"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>