<mvc:View
    xmlns:core="sap.ui.core" 
    controllerName="desafiobridge.desafiobridge.controller.LoginParticipante"
    xmlns:form="sap.ui.layout.form" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
>
	<Page showHeader="true" title="Login de Participante" titleAlignment="Center">
        <content>
            <form:Form >
                <form:title>
                    <core:Title text="Preencha os campos necessÃ¡rios" level="H6" ></core:Title>
                </form:title>
                <form:layout>
                    <form:ColumnLayout columnsL="1" columnsM="1" columnsXL="1"></form:ColumnLayout>
                </form:layout>
                <form:formContainers> 
                    <form:FormContainer >
                        <form:formElements>

                            <form:FormElement >
                                <form:fields>
                                    <Input id="email" value="{Participante>/email}" placeholder="E-mail"></Input>
                                </form:fields>
                            </form:FormElement>

                            <form:FormElement >
                                <form:fields>
                                    <Input id="senha" type="Password" value="{Participante>/senha}" placeholder="Senha"></Input>
                                </form:fields>
                            </form:FormElement>                            
                            
                        </form:formElements>
                    </form:FormContainer>
                    
                </form:formContainers> 
            </form:Form>
            
        </content>
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Cancelar" type="Reject" press="onCancelar"/>
                <Button text="Confirmar" type="Emphasized" press="onConfirmar"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>