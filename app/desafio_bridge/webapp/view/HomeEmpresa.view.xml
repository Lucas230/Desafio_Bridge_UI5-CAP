<mvc:View xmlns:core="sap.ui.core" 
    controllerName="desafiobridge.desafiobridge.controller.HomeEmpresa"
    xmlns:form="sap.ui.layout.form" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
> 

	<Page showHeader="true" title="Consulta da vaga" titleAlignment="Center">
        <content>
            <form:Form>
                <form:layout>
                     <form:ColumnLayout columnsL="1" columnsM="1" columnsXL="1"></form:ColumnLayout>
                </form:layout>
                <form:formContainers>
                    <form:FormContainer>

                        <form:formElements>
                            <form:FormElement>
                                <form:fields>
                                    <TextArea class="vervagatext" value="Bem vinda empresa {Empresa>/nome}! Navegue pelo nosso sistemas para conhecer mais." editable="false"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>

                        <form:formElements>
                            <form:FormElement>
                                <form:fields>
                                    <TextArea class="vervagatext" value="Email cadastrado: {Empresa>/email}" editable="false"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>

                        <form:formElements>
                            <form:FormElement>
                                <form:fields>
                                    <Button text="Editar Informações" type="Emphasized" press="onNavEditar"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>

                    </form:FormContainer>
                    
                </form:formContainers>
                
            </form:Form>
        </content>
		<footer>
           <OverflowToolbar >
                <Image width="4%" src="/desafio_bridge/webapp/images/BB_logo.png"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
	</Page>
	
</mvc:View>