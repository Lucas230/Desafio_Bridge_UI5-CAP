<mvc:View 
    controllerName="desafiobridge.desafiobridge.controller.MenuLogin"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m">

    <Page showHeader="true" title="Menu Login" titleAlignment="Center" >
        <content>
            <VBox width="100%">
                <Image src="images/BB_logo.png" width="50%" class="center" height="50%" />
                <List>
                    <items>
                        <StandardListItem title="Login de Participantes" type="Active" press="onNavLoginParticipante"/>
                        <StandardListItem title="Login de Empresas" type="Active" press="onNavLoginEmpresa"/>
                        <StandardListItem title="Login Administrador" type="Active" press="onNavLoginAdm"/>
                    </items>
                </List>
            </VBox>
        </content>
    </Page>
</mvc:View>